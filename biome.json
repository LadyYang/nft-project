{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "vcs": {
    "enabled": true,
    "defaultBranch": "main",
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": false,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "jsxQuoteStyle": "double",
      "lineWidth": 80
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false
    }
  },
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      ".vscode/**/*",
      "node_modules/**/*",
      "dist/**/*",
      "nft-mock-data/**/*"
    ]
  }
}
